<%= render partial: 'action_menu' %>
<h2><%= @product.title %></h2>
<div class="box tabular">
  <div id="all_attributes">
    <div class=" issue details">
      <div class="attributes">

        <div class="splitcontent">
          <div class="attribute">
            <div class='label'><%= l(:field_description) %></div>
            <%= @product.description %>

          </div>
          <div class="attribute">
            <div class='label'><%= l(:field_price) %></div>
            <%= @product.price %>
          </div>
          <div class="attribute">
            <div class='label'><%= l(:field_unit_price) %></div>
            <%= @product.unit_price %>
          </div>
          <div class="attribute">
            <div class='label'><%= l(:field_msrp) %></div>
            <%= @product.msrp %>
          </div>
          <div class="attribute">
            <div class='label'><%= l(:field_currency) %></div>
            <%= @product.currency %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>