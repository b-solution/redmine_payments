<%= render partial: 'action_menu' %>
<h2>Products</h2>
<div class="autoscroll">
  <table class="list issues ">
    <thead>
    <tr>
      <th>name</th>
      <th>price</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= link_to product.title, project_product_path(@project, product)  %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Show', project_product_path(@project, product) %></td>
      <td><%= link_to 'Edit', edit_project_product_path(@project, product), :class => 'icon icon-edit' %></td>
      <td><%= link_to 'Delete', project_product_path(@project, product),
                      method: :delete, data: { confirm: 'Are you sure?' }, :class => 'icon icon-del' %></td>

    </tr>
    <% end %>
    </tbody>
  </table>
</div>
<span class="pagination"><%= pagination_links_full @products_pages, @products_count %></span>